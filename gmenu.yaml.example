# gmenu configuration file
# Place this file in one of these locations (first match wins):
# - ~/.config/gmenu/<menu-id>/config.yaml
# - ~/.gmenu/<menu-id>/config.yaml
# - $XDG_CONFIG_HOME/gmenu/<menu-id>/config.yaml
# - ~/.config/gmenu/config.yaml
# - ~/.gmenu/config.yaml
# - $XDG_CONFIG_HOME/gmenu/config.yaml

# Application settings
title: "My Custom Menu"
prompt: "Choose an option"
menu_id: "main-menu"
search_method: "fuzzy"  # options: direct, fuzzy, fuzzy1, fuzzy3, default
preserve_order: false
initial_query: ""
auto_accept: false
terminal_mode: false
no_numeric_selection: false

# Window dimensions
min_width: 600
min_height: 300
max_width: 1920
max_height: 1080

# Internal settings
accept_custom_selection: true 
